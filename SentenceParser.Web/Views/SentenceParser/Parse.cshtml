
@{
    ViewBag.Title = "Parse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using(Html.BeginForm("Parse", "SentenceParser", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <label for="file">Choose Input file:</label>
    <input type="file" name="file" id="file" class="btn" /><br><br>
    <input type="submit" class="btn btn-default" value="Upload File" />
    <br>
    <br />
    if(!string.IsNullOrWhiteSpace(@ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }
}